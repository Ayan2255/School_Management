<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".Login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Welcome"
            android:textColor="@color/text_color"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            tools:ignore="SpeakableTextPresentCheck">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/bg2"
                android:orientation="vertical"
                android:padding="10dp">


                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_camera_alt_24"
                    app:civ_border_color="#000000"
                    app:civ_border_width="2dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg2"
                        android:drawableLeft="@drawable/baseline_account_circle_24"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="20sp">

                    </TextView>

                    <EditText
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autofillHints="true"
                        android:background="@drawable/bg2"
                        android:gravity="left"
                        android:hint="Name"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="#827B7B" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg2"
                        android:drawableLeft="@drawable/baseline_account_circle_24"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="20sp">

                    </TextView>

                    <EditText
                        android:id="@+id/user_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autofillHints="true"
                        android:background="@drawable/bg2"
                        android:gravity="left"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:padding="5dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="#827B7B" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg2"
                        android:drawableLeft="@drawable/baseline_account_circle_24"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="20sp">

                    </TextView>

                    <EditText
                        android:id="@+id/user_roll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autofillHints=""
                        android:background="@drawable/bg2"
                        android:gravity="left"
                        android:hint="Roll"
                        android:inputType="numberDecimal"
                        android:padding="5dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="#827B7B" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg2"
                        android:drawableLeft="@drawable/baseline_account_circle_24"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="20sp">

                    </TextView>

                    <EditText
                        android:id="@+id/user_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autofillHints=""
                        android:background="@drawable/bg2"
                        android:gravity="left"
                        android:hint="Address"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="#827B7B" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg2"
                        android:drawableLeft="@drawable/baseline_account_circle_24"
                        android:padding="5dp"
                        android:textColor="@color/white"
                        android:textSize="20sp">

                    </TextView>

                    <EditText
                        android:id="@+id/user_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autofillHints=""
                        android:background="@drawable/bg2"
                        android:gravity="left"
                        android:hint="Phone"
                        android:inputType="phone"
                        android:padding="5dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="#827B7B" />

                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <EditText
                        android:id="@+id/user_password1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg2"
                        android:gravity="center"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="5dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="#827B7B" />

                    <EditText
                        android:id="@+id/user_password2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:autofillHints=""
                        android:background="@drawable/bg2"
                        android:gravity="center"
                        android:hint="Confirm Password:"
                        android:inputType="textPassword"
                        android:padding="5dp"
                        android:textColor="@color/text_color"
                        android:textColorHint="#827B7B"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/menu"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:hint="Class"
                        android:padding="5dp"
                        android:textColorHint="@color/white"

                        >

                        <AutoCompleteTextView
                            android:id="@+id/drop_items"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="@color/material_dynamic_neutral70"
                            android:inputType="none"
                            android:padding="2dp"
                            android:textColor="#000000"
                            app:simpleItemSelectedColor="#85B63C">

                        </AutoCompleteTextView>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/menu2"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:hint="Shift"
                        android:padding="5dp"
                        android:textColorHint="@color/white"

                        >

                        <AutoCompleteTextView
                            android:id="@+id/drop_items2"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="@color/material_dynamic_neutral70"
                            android:inputType="none"
                            android:padding="2dp"
                            android:textColor="#000000"
                            app:simpleItemSelectedColor="#85B63C">

                        </AutoCompleteTextView>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/menu3"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:hint="Sex"
                        android:padding="5dp"
                        android:textColorHint="@color/white"

                        >

                        <AutoCompleteTextView
                            android:id="@+id/drop_items3"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="@color/material_dynamic_neutral70"
                            android:inputType="none"
                            android:padding="2dp"
                            android:textColor="#000000"
                            app:simpleItemSelectedColor="#85B63C">

                        </AutoCompleteTextView>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/menu4"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:hint="Blood"
                        android:padding="5dp"
                        android:textColorHint="@color/white"
                        >

                        <AutoCompleteTextView
                            android:id="@+id/drop_items4"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="@color/material_dynamic_neutral70"
                            android:inputType="none"
                            android:padding="2dp"
                            android:textColor="#000000"
                            app:simpleItemSelectedColor="#85B63C">

                        </AutoCompleteTextView>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>





                <soup.neumorphism.NeumorphButton
                    android:id="@+id/singUp_btn"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#F8DE22"
                    android:text="Singup"
                    android:textColor="@color/text_color"
                    android:textSize="16dp"></soup.neumorphism.NeumorphButton>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>